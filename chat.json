{
  "name": "answer",
  "strict": true,
  "schema": {
    "type": "object",
    "properties": {
      "question": {
        "type": [
          "string",
          "null"
        ],
        "description": "The inferred question, or null if no question can be inferred"
      },
      "answer": {
        "description": "The answer to the question, or null either if no question can be inferred or if the inferred question cannot be answered",
        "anyOf": [
          {
            "type": "string",
            "minLength": 1
          },
          {
            "type": "number"
          },
          {
            "type": "null"
          }
        ]
      }
    },
    "additionalProperties": false,
    "required": [
      "question",
      "answer"
    ]
  }
}
