?start: inputs
?inputs: calculation
  | inputs "&" calculation
?calculation: expression [unit "TO" unit]
?unit: LWORD
  | unit LWORD
?expression: product
  | expression OP product
?product: atom
  | product OPP atom
?atom: expression
  | FUNC? "(" expression ")"
  | N
LWORD: /[a-z]+/
OP: "+" | "-"
OPP: "*" | "/"
FUNC: "round" | "floor" | "ceil"
N: OP? DECIMAL | SIGNED_INT
%import common.SIGNED_INT
%import common.DECIMAL
%import common.WS
%ignore WS
