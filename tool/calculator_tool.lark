?start: inputs
?inputs: calculation
  | inputs "&" calculation
?calculation: expression [unit "TO" unit]
?unit: LWORD
  | unit LWORD
?expression: product
  | expression OP product
?product: atom
  | product OPP atom
?atom: N
  | expression
  | FUNC? "(" expression ")"
LWORD: /\b[a-z]+\b/
FUNC: "round" | "floor" | "ceil"
OPP: "*" | "/"
OP: "+" | "-"
N: OP? DECIMAL | SIGNED_INT
%import common.SIGNED_INT
%import common.DECIMAL
%import common.WS
%ignore WS
